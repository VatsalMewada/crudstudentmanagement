<h1>Edit Profile</h1>

<link rel="stylesheet" href="assets/stylesheets/application.css"> 

<center>
<%= form_with(model: @info,:url => info_index_path, local: true) do |f|%>

<table class="roundedCorners">
<tr>
<td>
<%=f.label :name %></td>
<td>
<%=f.text_field :name , class: 'my_class' %></td>

</tr>

<tr>
<td>
<%=f.label :password %></td>
<td>
<%=f.text_field :password, class: 'my_class' %></td>

</tr>

<tr>
<td>
<%=f.label :address %></td>
<td>
<%=f.text_field :address, class: 'my_class' %></td>

</tr>

<tr>
<td><%= link_to  "Back", info_index_path %>
</td>
<td align=center>
<%= f.submit class:'my_class'%>
</td>

</tr>

</table>

<%end%>
</center>
